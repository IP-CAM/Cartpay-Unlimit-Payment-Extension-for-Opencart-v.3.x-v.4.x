{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a id="btn_save" class="btn btn-primary">{{ button_save }}&nbsp;<span class="fa fa-save"></span></a>
                <a onclick="location = '{{ cancel }}';" class="btn btn-default">{{ button_cancel }}&nbsp;<span
                            class="fa fa-reply"></span></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><span class="fa fa-exclamation-circle"></span> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="card">
            <div class="card-header"><i class="fa-solid fa-pencil"></i> Edit Unlimit</div>
            <div class="card-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form_ul"
                      class="form-horizontal">
                    <ul class="nav nav-tabs" id="tabs">
                        <li class="nav-item"><a class="nav-link active" href="#tab_settings"
                                                data-toggle="tab">{{ tab_setting }}</a></li>
                    </ul>
                    <div class="tab-content" id="form-table">
                        <div class="tab-pane active" id="tab_settings">
                            <div class="row mb-3 required" id="div_payment_ul_pix_status">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_status">{{ entry_payment_status }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_pix_status" id="payment_ul_pix_status" class="form-select">
                                        {% if payment_ul_pix_status %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_status }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_pix_terminal_code">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_terminal_code">{{ entry_terminal_code }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" id="payment_ul_pix_terminal_code"
                                           name="payment_ul_pix_terminal_code"
                                           value="{{ payment_ul_pix_terminal_code }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_pix_terminal_password">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_terminal_password">{{ entry_terminal_password }}</label>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control" id="payment_ul_pix_terminal_password"
                                           name="payment_ul_pix_terminal_password"
                                           value="{{ payment_ul_pix_terminal_password }}"/>
                                    <span class="note">{{ help_callback_secret_credentials }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_pix_callback_secret">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_callback_secret">{{ entry_callback_secret }}</label>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control" id="payment_ul_pix_callback_secret"
                                           name="payment_ul_pix_callback_secret"
                                           value="{{ payment_ul_pix_callback_secret }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_pix_test_environment">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_test_environment">{{ entry_test_environment }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_pix_test_environment" id="payment_ul_pix_test_environment"
                                            class="form-select">
                                        {% if payment_ul_pix_test_environment %}
                                            <option value="1" selected="selected">{{ text_no }}</option>
                                            <option value="0">{{ text_yes }}</option>
                                        {% else %}
                                            <option value="1">{{ text_no }}</option>
                                            <option value="0" selected="selected">{{ text_yes }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_test_environment }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_pix_payment_title">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_payment_title">{{ entry_payment_title }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" id="payment_ul_pix_payment_title"
                                           name="payment_ul_pix_payment_title"
                                           value="{{ payment_ul_pix_payment_title }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_pix_log_to_file">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_log_to_file">{{ entry_log_to_file }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_pix_log_to_file" id="payment_ul_pix_log_to_file"
                                            class="form-select">
                                        {% if payment_ul_pix_log_to_file %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_log_to_file }}</span>
                                </div>
                            </div>

                            <div class="row mb-3" id="div_payment_ul_pix_sort_order">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_pix_sort_order">{{ entry_sort_order }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control"
                                           id="payment_ul_pix_sort_order" name="payment_ul_pix_sort_order"
                                           value="{{ payment_ul_pix_sort_order }}"
                                           oninput="this.value = this.value.replace(/^0|\D/g, '');"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var api_mode_changed_warning = "{{ api_mode_changed_warning }}"
    var ul_empty_error = "{{ entry_empty }}";
    var ul_invalid_error = "{{ entry_invalid }}";
</script>
<script type="text/javascript" src="../extension/unlimit/admin/view/javascript/ul/common_settings_ul.js"></script>
<script defer type="text/javascript"
        src="../extension/unlimit/admin/view/javascript/ul/pix/ul_settings_pix.js"></script>
<script type="text/javascript" src="../extension/unlimit/admin/view/javascript/ul/spinner.min.js"></script>
<link rel="stylesheet" href="../extension/unlimit/admin/view/stylesheet/ul_admin.css">