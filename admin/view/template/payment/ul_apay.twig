{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a id="btn_save" class="btn btn-primary">{{ button_save }} <em class="fa fa-save"></em></a>
                <a onclick="location = '{{ cancel }}';" class="btn btn-default">{{ button_cancel }} <em
                            class="fa fa-reply"></em></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><em class="fa fa-exclamation-circle"></em> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if unlimit_apay_error %}
            {% for error in unlimit_apay_error %}
                <div class="alert alert-danger"><em class="fa fa-exclamation-circle"></em> {{ error }}</div>
            {% endfor %}
        {% endif %}
        <div class="card">
            <div class="card-header"><i class="fa-solid fa-pencil"></i> Edit Unlimit</div>
            <div class="card-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form_ul"
                      class="form-horizontal">
                    <ul class="nav nav-tabs" id="tabs">
                        <li class="nav-item"><a class="nav-link active" href="#tab_settings"
                                                data-toggle="tab">{{ tab_setting }}</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="form-table">
                        <div class="tab-pane active" role="tabpanel" aria-labelledby="tab_settings-tab"
                             id="tab_settings">
                            <div class="row mb-3 required">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_status">{{ entry_payment_status }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_apay_status" id="payment_ul_apay_status"
                                            class="form-select">
                                        {% if payment_ul_apay_status %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ entry_access_token_tooltip }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_apay_terminal_code">
                                <label class="col-sm-3 col-form-label" for="payment_ul_apay_terminal_code"
                                       data-toggle="tooltip">{{ entry_terminal_code }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" id="payment_ul_apay_terminal_code"
                                           name="payment_ul_apay_terminal_code"
                                           value="{{ payment_ul_apay_terminal_code }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_ul_apay_terminal_password">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_terminal_password">{{ entry_terminal_password }}</label>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control" id="payment_ul_apay_terminal_password"
                                           name="payment_ul_apay_terminal_password"
                                           value="{{ payment_ul_apay_terminal_password }}"/>
                                    <span class="note">{{ help_callback_secret_credentials }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_apay_callback_secret">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_callback_secret">{{ entry_callback_secret }}</label>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control" id="payment_ul_apay_callback_secret"
                                           name="payment_ul_apay_callback_secret"
                                           value="{{ payment_ul_apay_callback_secret }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_apay_test_environment">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_test_environment">{{ entry_test_environment }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_apay_test_environment"
                                            id="payment_ul_apay_test_environment"
                                            class="form-select">
                                        {% if payment_ul_apay_test_environment %}
                                            <option value="1" selected="selected">{{ text_no }}</option>
                                            <option value="0">{{ text_yes }}</option>
                                        {% else %}
                                            <option value="1">{{ text_no }}</option>
                                            <option value="0" selected="selected">{{ text_yes }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_test_environment }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_apay_payment_title">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_payment_title">{{ entry_payment_title }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" id="payment_ul_apay_payment_title"
                                           name="payment_ul_apay_payment_title"
                                           value="{{ payment_ul_apay_payment_title }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_log_to_file">{{ entry_log_to_file }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_apay_log_to_file" id="payment_ul_apay_log_to_file"
                                            class="form-select">
                                        {% if payment_ul_apay_log_to_file %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_log_to_file }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_ul_apay_merchant_id">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_merchant_id">{{ entry_merchant_id }}</label>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control" id="payment_ul_apay_merchant_id"
                                           name="payment_ul_apay_merchant_id"
                                           value="{{ payment_ul_apay_merchant_id }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_ul_apay_merchant_certificate">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_merchant_certificate">{{ entry_merchant_certificate }}</label>
                                <div class="col-sm-5">
                                    <input type="file" class="form-control" id="payment_ul_apay_merchant_certificate"
                                           name="payment_ul_apay_merchant_certificate"/>
                                    {% if payment_ul_apay_merchant_certificate %}
                                        <input type="hidden" class="form-control"
                                               id="payment_ul_apay_merchant_certificate_existing"
                                               name="payment_ul_apay_merchant_certificate_existing"
                                               value="{{ payment_ul_apay_merchant_certificate }}"/>
                                        <span>{{ payment_ul_apay_merchant_certificate }}</span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_ul_apay_merchant_key">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_merchant_key">{{ entry_merchant_key }}</label>
                                <div class="col-sm-5">
                                    <input type="file" class="form-control" id="payment_ul_apay_merchant_key"
                                           name="payment_ul_apay_merchant_key"/>
                                    {% if payment_ul_apay_merchant_key %}
                                        <input type="hidden" class="form-control"
                                               id="payment_ul_apay_merchant_key_existing"
                                               name="payment_ul_apay_merchant_key_existing"
                                               value="{{ payment_ul_apay_merchant_key }}"/>
                                        <span>{{ payment_ul_apay_merchant_key }}</span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mb-3" id="div_payment_ul_apay_sort_order">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_apay_sort_order">{{ entry_sort_order }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control"
                                           id="payment_ul_apay_sort_order" name="payment_ul_apay_sort_order"
                                           value="{{ payment_ul_apay_sort_order }}"
                                           oninput="this.value = this.value.replace(/^0|\D/g, '');"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var ul_empty_error = "{{ entry_empty }}";
    var ul_invalid_error = "{{ entry_invalid }}";
</script>
<script type="text/javascript" src="../extension/unlimit/admin/view/javascript/ul/common_settings_ul.js"></script>
<script defer type="text/javascript"
        src="../extension/unlimit/admin/view/javascript/ul/apay/ul_settings_apay.js"></script>
<script type="text/javascript" src="../extension/unlimit/admin/view/javascript/ul/spinner.min.js"></script>
<link rel="stylesheet" href="../extension/unlimit/admin/view/stylesheet/ul_admin.css">