<div id="ul_multibanco"></div>
<link href="extension/unlimit/catalog/view/stylesheet/ul_checkout.css" rel="stylesheet" type="text/css">
<input type="hidden" id="paymentType" value="multibanco"/>
<input type="hidden" id="contryType" value="{{ countryType }}"/>


<div class="clearfix"></div>
<div id="spinner">
    <div id="ul-box-form">
        <div class="ul-box-inputs ul-line">
            <div class="ul-box-inputs ul-col-50">
                <div class="ul-title-checkout">{{ payment_title }}</div>
            </div>
        </div>
        <div id="unlimit-form">
            <form method="post" id="ul-form" name="ul-form"
                  action="{{ actionForm }}">
                <div class="ul-box-inputs ul-col-100">
                    <label for="ulMultibancoNumber">{{ ul_phone_number }} <em>*</em></label>
                    <input type="text" id="ulMultibancoNumber" name="unlimit_custom[ulMultibancoNumber]"
                           data-checkout="ulMultibancoNumber"
                           autocomplete="off"/>
                    <span id="multibanco-number"></span>
                    <span class="ul-error" id="ulMultibancoError"
                          data-main="#ulMultibancoNumber"> {{ error_empty_phone }} </span>
                    <span class="ul-error" id="ulMultibancoError-second"
                          data-main="#ulMultibancoNumber"> {{ error_invalid_phone }} </span>
                </div>

                <div class="ul-box-inputs ul-line">
                    <div class="ul-box-inputs ul-col-50">
                        <img alt="{{ action }}"
                             src="extension/unlimit/admin/view/image/payment/{{ action }}ul_multibanco.png"
                             width="60"
                             height="55"/>
                    </div>
                </div>

                <div class="ul-box-inputs ul-line">
                    <div class="ul-box-inputs ul-col-50">
                        {% if is_multibanco_payment_page_required == 1 %}
                            <input type="submit" id="ulBtnSubmit" data-prefix="Multibanco" data-method="payment_page"
                                   name="btnSubmit" value={{ payment_button }}>
                        {% else %}
                            <input type="submit" id="ulBtnSubmit" data-prefix="Multibanco" data-method="gateway"
                                   name="btnSubmit" value={{ payment_button }}>
                        {% endif %}
                    </div>

                    <div class="ul-box-inputs ul-col-25">
                        <div id="ul-box-loading">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{ '<script defer src="./extension/unlimit/catalog/view/javascript/ul/mask.js"></script>' }}
