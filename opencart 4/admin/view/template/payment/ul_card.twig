{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a id="btn_save" class="btn btn-primary">{{ button_save }} <em class="fa fa-save"></em></a>
                <a onclick="location = '{{ cancel }}';" class="btn btn-default">{{ button_cancel }} <em
                            class="fa fa-reply"></em></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><em class="fa fa-exclamation-circle"></em> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="card">
            <div class="card-header"><i class="fa-solid fa-pencil"></i> Edit Unlimit</div>
            <div class="card-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form_ul"
                      class="form-horizontal">
                    <ul class="nav nav-tabs" id="tabs">
                        <li class="nav-item"><a class="nav-link active" href="#tab_settings"
                                                data-toggle="tab">{{ tab_setting }}</a></li>
                    </ul>
                    <div class="tab-content" id="form-table">
                        <div class="tab-pane active" role="tabpanel" aria-labelledby="tab_settings-tab"
                             id="tab_settings">
                            <div class="row mb-3 required">
                                <label class="col-sm-3 col-form-label" for="payment_ul_card_status"
                                       title='{{ entry_access_token_tooltip }}'><span
                                            data-toggle="tooltip">{{ entry_payment_status }}</span></label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_status" id="payment_ul_card_status"
                                            class="form-select">
                                        {% if payment_ul_card_status %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_status }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_payment_page">
                                <label class="col-sm-3 col-form-label" for="input-settlement-immediate">
                                    <span data-toggle="tooltip">{{ entry_payment_page }}</span></label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_payment_page" id="payment_ul_card_payment_page"
                                            class="form-select ul_access_mode">
                                        {% if payment_ul_card_payment_page %}
                                            <option value="1" selected="selected">{{ text_pp }}</option>
                                            <option value="0">{{ text_gw }}</option>
                                        {% else %}
                                            <option value="1">{{ text_pp }}</option>
                                            <option value="0" selected="selected">{{ text_gw }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_payment_page }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_terminal_code">
                                <label class="col-sm-3 col-form-label" for="payment_ul_card_terminal_code"
                                       data-toggle="tooltip">{{ entry_terminal_code }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" id="payment_ul_card_terminal_code"
                                           name="payment_ul_card_terminal_code"
                                           value="{{ payment_ul_card_terminal_code }}"/>
                                    <span class="note">{{ help_terminal_code }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_ul_card_terminal_password">
                                <label class="col-sm-3 col-form-label"
                                       for="input-settlement-immediate">{{ entry_terminal_password }}</label>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control" id="payment_ul_card_terminal_password"
                                           name="payment_ul_card_terminal_password"
                                           value="{{ payment_ul_card_terminal_password }}"/>
                                    <span class="note">{{ help_terminal_password }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_callback_secret">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_callback_secret">{{ entry_callback_secret }}</label>
                                <div class="col-sm-5">
                                    <input type="password" class="form-control" id="payment_ul_card_callback_secret"
                                           name="payment_ul_card_callback_secret"
                                           value="{{ payment_ul_card_callback_secret }}"/>
                                    <span class="note">{{ help_callback_secret }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_test_environment">
                                <label class="col-sm-3 col-form-label"
                                       for="input-settlement-immediate">{{ entry_test_environment }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_test_environment"
                                            id="payment_ul_card_test_environment" class="form-select">
                                        {% if payment_ul_card_test_environment %}
                                            <option value="1" selected="selected">{{ text_no }}</option>
                                            <option value="0">{{ text_yes }}</option>
                                        {% else %}
                                            <option value="1">{{ text_no }}</option>
                                            <option value="0" selected="selected">{{ text_yes }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_test_environment }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_capture_payment">
                                <label class="col-sm-3 col-form-label"
                                       for="input-settlement-immediate">{{ entry_capture_payment }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_capture_payment" id="payment_ul_card_capture_payment"
                                            class="form-select">
                                        {% if payment_ul_card_capture_payment %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                            <option value="1">{{ text_yes }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_capture_payment }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_installment_enabled">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_installment_enabled">{{ entry_installment_enabled }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_installment_enabled"
                                            id="payment_ul_card_installment_enabled" class="form-select">
                                        {% if payment_ul_card_installment_enabled %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_installment_enabled }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_installment_type">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_installment_type">{{ entry_installment_type }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_installment_type"
                                            id="payment_ul_card_installment_type" class="form-select">
                                        {% if payment_ul_card_installment_type == 'IF' %}
                                            <option value="IF" selected="selected">{{ text_issuer_financed }}</option>
                                            <option value="MF_HOLD">{{ text_merchant_financed }}</option>
                                        {% else %}
                                            <option value="IF">{{ text_issuer_financed }}</option>
                                            <option value="MF_HOLD"
                                                    selected="selected">{{ text_merchant_financed }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_installment_type }}</span>
                                </div>
                            </div>

                            <div class="row mb-3" id="div_payment_ul_card_minimum_installment_amount">
                                <label class="col-sm-3 col-form-label" for="payment_ul_card_minimum_installment_amount"
                                       data-toggle="tooltip">{{ entry_minimum_installment_amount }}</label>
                                <div class="col-sm-5">
                                    <input type="number" class="form-control"
                                           id="payment_ul_card_minimum_installment_amount"
                                           name="payment_ul_card_minimum_installment_amount"
                                           value="{{ payment_ul_card_minimum_installment_amount }}"/>
                                    <span class="note">{{ help_minimum_installment_amount }}</span>
                                </div>
                            </div>

                            <div class="row mb-3" id="div_payment_ul_card_maximum_accepted_installments">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_maximum_accepted_installments"
                                       data-toggle="tooltip">{{ entry_maximum_accepted_installments }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control"
                                           id="payment_ul_card_maximum_accepted_installments"
                                           name="payment_ul_card_maximum_accepted_installments"
                                           value="{{ payment_ul_card_maximum_accepted_installments }}"/>
                                    <span class="note">{{ help_maximum_accepted_installments }}</span>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_payment_title">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_payment_title">{{ entry_payment_title }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" id="payment_ul_card_payment_title"
                                           name="payment_ul_card_payment_title"
                                           value="{{ payment_ul_card_payment_title }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_entry_ask_cpf">{{ entry_ask_cpf }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_ask_cpf" id="payment_ul_card_ask_cpf"
                                            class="form-select">
                                        {% if payment_ul_card_ask_cpf %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3 required" id="div_payment_ul_card_dynamic_descriptor">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_dynamic_descriptor">{{ entry_dynamic_descriptor }}</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" id="payment_ul_card_dynamic_descriptor"
                                           name="payment_ul_card_dynamic_descriptor"
                                           value="{{ payment_ul_card_dynamic_descriptor }}"/>
                                </div>
                            </div>

                            <div class="row mb-3 required">
                                <label class="col-sm-3 col-form-label"
                                       for="payment_ul_card_log_to_file">{{ entry_log_to_file }}</label>
                                <div class="col-sm-5">
                                    <select name="payment_ul_card_log_to_file" id="payment_ul_card_log_to_file"
                                            class="form-select">
                                        {% if payment_ul_card_log_to_file %}
                                            <option value="1" selected="selected">{{ text_yes }}</option>
                                            <option value="0">{{ text_no }}</option>
                                        {% else %}
                                            <option value="1">{{ text_yes }}</option>
                                            <option value="0" selected="selected">{{ text_no }}</option>
                                        {% endif %}
                                    </select>
                                    <span class="note">{{ help_log_to_file }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
  var api_mode_changed_warning = "{{ api_mode_changed_warning }}"
</script>
<script type="text/javascript" src="../extension/unlimit/admin/view/javascript/ul/common_settings_ul.js"></script>
<script type="text/javascript" src="../extension/unlimit/admin/view/javascript/ul/card/ul_settings_card.js"></script>
<script type="text/javascript" src="../extension/unlimit/admin/view/javascript/ul/spinner.min.js"></script>
<link rel="stylesheet" href="../extension/unlimit/admin/view/stylesheet/ul_admin.css">
